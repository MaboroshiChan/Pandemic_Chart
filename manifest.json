{
  "name": "Coronavirus Data Visualization",
  "version": "2.0",
  "description": "Show recent coronavirus epidemic situation through chart",
  "background": {
	  "scripts": ["scripts/jquery-3.4.1.min.js", "background.js"],
	  "persistent": false
  },
  "browser_action":{
    "default_popup": "popup.html",
    "default_icon":{
        "16": "images/icons8-coronavirus-16.png",
        "32": "images/icons8-coronavirus-32.png",
        "48": "images/icons8-coronavirus-48.png",
        "128": "images/icons8-coronavirus-128.png"
      },
    "default_title": "Click here!"
  },
  "permissions":["storage"],
  "manifest_version": 2
}
